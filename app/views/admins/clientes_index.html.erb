<p style="color: green"><%= notice %></p>

<h1 class="text-center">Clientes</h1>

<div id="clientes" class=" m-5">

  <table class="table table-hover mt-3">
    <thead class="thead-dark">
      <tr>
        <th class="bg-dark text-light">Nome</th>
        <th class="bg-dark text-light">Email</th>
        <th class="bg-dark text-light">CPF</th>
        <th class="bg-dark text-light">Ações</th>
      </tr>
    </thead>
    <% @clientes.each do |cliente| %>
    <tr>

        <td><%= cliente.nome %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.cpf %></td>
        <td><%= link_to "Detalhes", clientes_admins_path(cliente) %></td>
    </tr>
    <% end %>
  <table>
</div>

