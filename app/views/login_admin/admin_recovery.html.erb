<div class="container">
    <div class="row mt-5">
        <div class="card rounded-4 col-sm-6 offset-sm-3 col-md-4 offset-md-4 mt-5 shadow p-5">
            <form class="form signin loginform text-dark" action="/recovery_send" method="post">
                <div class="text-center mb-4">
                    <i class="bi bi-person fs-5"></i>
                    <h1 class="h3 mb-3 font-wight-normal">Recuperar senha</h1>
                </div>

                <div class="form-label-group mt-4">
                    <label for="email">E-mail: </label>
                    <input type="email" id="email" class="form-control mt-1" placeholder="Informe seu e-mail cadastrado" name="email">
                </div>

                <button class="btn btn-dark h3 mb-3 font-wight-normal mt-4" type="submit">Recuperar</button>
            </form>

            <%= link_to "Voltar para Login", login_admin_path, class: "" %>
        </div>
    </div>
</div>