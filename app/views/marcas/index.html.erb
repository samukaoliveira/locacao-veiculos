<p style="color: green"><%= notice %></p>

<h1 class="text-center">Marcas</h1>

<div id="marcas" class=" m-5">

  <%= link_to "Cadastrar Marca", new_marca_path, class: "btn btn-primary" %>

<table class="table table-hover mt-3">
    <thead class="thead-dark">
      <tr class="rounded">
      <th class="bg-dark text-light">Nome</th>
      <th class="bg-dark text-light">Sigla</th>
      <th class="bg-dark text-light">Veículos cadastrados</th>
      <th colspan="2" class="bg-dark text-light">Ações</th>
    </tr>
    <thead>
  <% @marcas.each do |marca| %>
    <tr>
    
        <td><%= marca.nome %></td>
        <td><%= marca.sigla %></td>
        <td><%= marca.veiculos.count %></td>
        <td><%= link_to "", edit_marca_path(marca), class: "bi bi-pencil" %></td>
      <td><%= link_to "", marca_path(marca), method: :delete, data: { confirm: "Tem certeza?" }, class: "bi bi-trash text-danger" %></td>
      <% end %>
    </tr>
  <table>
          
      
</div>

