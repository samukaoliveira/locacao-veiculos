<p style="color: green"><%= notice %></p>

<h1 class="text-center">Veiculos</h1>

<div id="veiculos" class=" m-5">

  <%= link_to "Cadastrar Veiculo", new_veiculo_path, class: "btn btn-primary" %>

<table class="table table-hover mt-3">
    <thead class="thead-dark">
      <tr class="rounded">
      <th class="bg-dark text-light">Foto</th>
      <th class="bg-dark text-light">Carro</th>
      <th class="bg-dark text-light">Cor</th>
      <th class="bg-dark text-light">Lotação</th>
      <th class="bg-dark text-light">Qtde Dias</th>
      <th class="bg-dark text-light">Ano</th>
      <th class="bg-dark text-light">Marca</th>
      <th class="bg-dark text-light">Valor da Diária</th>
      <th colspan="2" class="bg-dark text-light">Ações</th>
    </tr>
    <thead>
  <% @veiculos.each do |veiculo| %>
    <tr>
    
        <td><%= no_image_check(veiculo, :cart_avatar) %>
        <td><%= veiculo.nome %></td>
        <td><%= veiculo.cor %></td>
        <td><%= veiculo.qnt_passageiros %></td>
        <td><%= veiculo.placa.upcase %></td>
        <td><%= veiculo.ano %></td>
        <td><%= veiculo.marca.nome %></td>
        <td><%= number_to_currency(veiculo.valor) %></td>
        <td><%= link_to "", edit_veiculo_path(veiculo), class: "bi bi-pencil" %></td>
      <td><%= link_to "", veiculo_path(veiculo), method: :delete, data: { confirm: "Tem certeza?" }, class: "bi bi-trash text-danger" %></td>
      <% end %>
    </tr>
  <table>
          
      
</div>

